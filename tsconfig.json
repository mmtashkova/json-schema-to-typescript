{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
    "include": ["src/**/*", ".eslintrc.json"],
  "exclude": [
    "node_modules",
    "./test", "dist"
  ]
}
